@import '../lib/index'
@import 'animate'

/* ===============
   COLORES
   =============== */

negro = #2f2f30
negro_2 = #434343
azul = #25a8cc
gris = #f3f0f0
border-color = #A3A2A3
light-gray = #cacaca
/* ===============
   RESETS
   =============== */

normalize()
box_reset()

ul
nav
li
figure
p
h1
h2
h3
	margin 0
	padding 0

a
	text-decoration none

html
body
	size(100%)
body
	background gris
	
	
li
	list-style none


	
/* ===============
   USEFUL CLASS
   =============== */
  
.center-text
	text-align center

.overflow
	overflow hidden
	size(100%)
	position fixed

.active
	background azul
	svg
		fill white
	&:after
		content ''
		triangle(bottom, 15px, azul)
		position absolute
		bottom -7px
		left 50%
		margin-left -7px
		z-index 500

.mostrar-menu
	display block !important


.web-container
	max-width 1280px
	margin auto
	clearfix()
	
/* ===============
   TIPOGRAFIA 
   =============== */
   
h2
h1
	font-family 'Roboto Condensed', sans-serif
h3
p
	font-family 'Roboto', sans-serif
	



/* ===============
   OVERLAY/LOGIN
   =============== */

.overlay
	position fixed
	display none
	size(100%)
	background rgba(black, .25)
	top 0
	left 0
	z-index 999
	.login-form
		width 90%
		height auto
		animation-duration 500ms
		background white
		position relative
		margin auto
		top 1em
		padding 1em
		text-align center
		box-shadow 0px 0px 5px rgba(negro, .50)
		.close-login
			size(25px)
			background azul
			position absolute
			top 0
			right 0
			fill white
			text-align center
			svg
				size(100%)
		h2
			font-size em(20px)
			text-align center
			margin-bottom 10px
		p
			font-size 3vw
			margin-bottom 10px
		.btn
			width 85%
			line-height 45px
			margin auto
			margin-bottom 5px
			height 45px
			display block
			background red
			border-radius 3px
			position relative
			font-size em(14px)
			text-align right
			padding-right 1em
			svg
				size(30px)
				top 8px
				fill white
				position absolute
				left 0px
		.facebook-login
			background #46619c
			color white
		.google-login
			background white
			border 1px solid #a3a2a3
			color negro
			svg
				fill #d62d20
				left 5px
		hr
			width 90%
			background rgba(#a3a2a3, .25)
			height 1px
			border 0
		.login-wrapper
			width 90%
			margin auto
		input[type="text"]
		input[type="password"]
			size(90%, 40px)
			margin-bottom 5px
			border-radius 3px
			padding-left 5px
			border 1px solid #a3a2a3
		input[type="password"]
			margin-bottom 1em
		span
			font-size em(10px)
			color #a3a2a3
			display block
			text-align left
			font-weight 300
			margin-bottom 5px
		.contrase√±a
			text-decoration underline
			font-size em(12px)
			font-weight 300
			color negro
			float left
		input[type="checkbox"]
			circle(12px)
			border-radius 0
			float right
		label
			font-size em(12px)
			float right
			margin-left 5px
		button
			border-radius 3px
			background azul
			color white
			margin 10px auto 0px
			width 200px
			height 40px
			border none
		.cuenta
			margin-bottom 0px
		.login-link
			color azul 
			font-size em(14px)
/* ===============
   HEADER
   =============== */

/* MENU ICON */

.menu-icon
	fill white
	size(30px)

.top-nav 
	background negro
	size(100%, 48px)
	color white
	font-family 'Roboto Condensed', sans-serif
	z-index 500
	position fixed
	clearfix()
	@media screen and (min-width: 1024px)
		top 0
		position fixed
	header
		@media print
			display none
		@media screen and (min-width: 1024px)
			max-width 1280px
			margin auto
		figure
			size(100%, 48px)
			line-height 48px
			display inline-block
			text-align center
			img
				vertical-align middle
				padding-left em(5px)
		.mobile-menu
			size(48px)
			display inline-block
			position absolute
			right 0
			top 0
			.menu-icon
				position relative
				top 9px
			@media screen and (min-width: 1024px)
				display none
		.login-menu-button
			circle(48px)
			position absolute
			top 0
			left 0
			img
				width 100%
				padding 7px
		.login
		nav
			width 80%
			height  auto
			position fixed
			background negro_2
			top 48px
			padding-bottom 1.5em
		.login
			left 0
			animation-duration: 500ms;
			display none
			.user-name
				clearfix()
				border-bottom 1px solid rgba(negro, .25)
				padding 1em
				span
					font-size em(20px)
					float left
				a
					color azul
					float right
			.user-nav
				padding 0em 1em
				ul
					li
						width 92%
						text-align left
						display block
						position relative
						clear both
						a
							color white
							font-size .9em
							line-height 40px
							display block
							font-weight 300
							font-family 'Roboto', sans-serif
							span
								background azul
								circle(20px)
								display inline-block
								vertical-align middle
								line-height 20px
								text-align center
								font-size em(12px)
								//margin-top -3px
			.btn
				size(200px, 40px)
				background azul
				margin 1em auto 0em
				display block
				color white
				text-align center
				line-height 40px
				border-radius 1px
		nav
			right 0
			display none
			animation-duration: 500ms;
			@media screen and (min-width: 1024px)
				display inline-block
				float right
			.login-options
				text-align center
				a
					color azul
					width 49%
					line-height 40px
					font-size em(14px)
					display inline-block
			.search-box
				text-align center
				padding 1em 0em
				border-bottom 1px solid rgba(negro, .25)
				position relative
				clear both
				input
					size(92%, 45px) 
					border-radius 5px
					background rgba(negro, .50)
					border none
					font-size em(14px)
					font-weight 300
					padding-left 10px
				&:after
					content ''
					position absolute
					right 8%
					top 30px
					size(16px)
					display block
					background url('/svg/search.svg')
					background-repeat no-repeat
					background-size 16px
			ul
				width 100%
				z-index 60
				clear both
				@media screen and (min-width: 1024px)
					background inherit
				li
					width 92%
					text-align right
					display block
					position relative
					@media screen and (min-width: 1024px)
						display inline-block
						width 175px
					a
						color white
						font-size .9em
						line-height 48px
						display block
						font-weight 300
						font-family 'Roboto', sans-serif
						svg
							fill azul
							size(15px)
							position absolute
							right 2em
							top 15px
							transition rotate 1s ease-out
							@media screen and (min-width: 1024px)
								display none
							
					@media screen and (min-width: 1024px)
						li
						&:hover ul 
							display block
					ul
						display none
						background border-color
						@media screen and (min-width: 1024px)
							position absolute
							background gris
							box-shadow 0px 0px 5px rgba(negro_2, .50)
							li
								width 250px
								text-align left
								a
									color negro_2
									display block
									padding-left 1em
									&:hover
										background negro_2
										color white

/* ===============
   SLIDER
   =============== */
   
#slider-container
	position relative
	@media screen and (min-width: 1024px)
		top 48px
	#slider
		size(100%, 350px)
		z-index 10
		position relative
		@media screen and (min-width: 1024px)
			height 500px
		.slider-item
			overflow hidden
			size(100%)
			img
				width auto 
				height 350px
				@media screen and (min-width: 1024px)
					width 100%
					height auto
			&:after
				content ''
				position absolute
				top 0
				left 0
				size(100%)
				background rgba(negro, .25)
				
	.slider-buttons
		width 100%
		position absolute
		top 50%
		margin-top -50px
		z-index 10
		padding 0 .5em 0 .5em
		@media screen and (min-width: 1024px)
			top 265px
		.slider-button
			background rgba(gris, .75)
			circle(48px)
			fill negro_2
			padding em(10px)
			position relative
			box-shadow 0px 0px 5px rgba(negro_2, .25)
		#slider-prev
		#slider-next
			display inline-block
			z-index 30
			cursor pointer
		#slider-next
			float right

.cycle-overlay
	position absolute
	bottom 1em
	z-index 10
	right 0
	text-align center
	@media screen and (min-width: 1024px)
		text-align right
		right 1em
	div:first-child
		font-size 3em
		color white
		font-family 'Roboto Condensed', sans-serif
		font-weight 700
		text-shadow 0px 0px 10px negro
	div:last-child
		color white
		font-family 'Roboto', sans-serif
		font-weight 300
		padding em(5px)
		margin em(5px)
		background rgba(negro, .75)
		@media screen and (min-width: 1024px)
			font-size 1em
			padding 1em
	
	
/* ===============
   CAROUSEL 
   =============== */
  
.slick-dots
	text-align center
	li
		display inline-block
		button
			display none
		&:after
			content ''
			display inline-block
			circle(15px)
			background border-color
			margin 3px
			
/* DOT ACTIVE COLOR */
.slick-active
	&:after
		background azul !important
		
.carousel-container
	@media print
		display none
	clearfix()
	text-align center
	@media screen and (min-width: 1024px)
		max-width 1280px
		text-align left
		margin auto
	h3
	a
		margin 1em 1em	
	h3
		font-weight 300 
		border-bottom 1px solid border-color
		display inline-block
	a
		font-weight 700
		font-size 1em
		color azul
		float right
		font-family 'Roboto Condensed', sans-serif
		border-bottom 1px dotted rgba(border-color, .0)
		&:hover
			border-bottom 1px dotted border-color 
.carousel-item
	margin em(10px)
	background white
	height 200px
	border 1px solid rgba(border-color, .35);
	img
		width 100%
		height auto
	h2
	p
		font-weight 300
	h2
		font-size 1.5em
		color negro
	p
		font-size 1em
		color negro_2
		margin 0 0 .5em 0

.carousel-next
.carousel-prev
	fill border-color
	size(48px)
	padding 5px
	cursor pointer
	position absolute
	top 50%
	margin-top -48px

.carousel-prev
	left -48px

.carousel-next
	right -48px


/* ===============
   ANUNCIO DESTACADO
   =============== */
   
.destacado-container
	margin 1em 0em
	size(100%, 350px)
	position relative
	overflow hidden
	box-shadow inset 0 0 5px #000000
	.destacado-fondo
		clearfix()
		img
			position absolute
			size(100%)
			filter blur(2px)
	/*
	&:after
		content ''
		display block
		position absolute
		background rgba(negro, .50)
		size(100%)
		top 0
		left 0
	*/
	.destacado
		max-width 1024px
		width 90%
		height 70%
		background rgba(negro, .75)
		position relative
		margin auto
		top 15%
		padding 2.5em 1em
		border-radius 1em 0px 1em 0px
		clearfix()
		img
			circle(75px)
			top -37px
			right 0
			background white
			position absolute
			box-shadow 0px 0px 10px negro
			@media screen and (min-width: 1024px)
				circle(150px)
				top -40px
				right -50px
		p
		h1
			color white
		h1
			font-size 1.5em
			font-weight 700
			@media screen and (min-width: 1024px)
				font-size 3em
		p
			font-size 1em
			width 90%
			font-weight 300
			font-family 'Roboto', sans-serif
			@media screen and (min-width: 1024px)
				width 50%
				font-size 1.2em
		button
			background azul
			width 150px
			height 48px
			font-family 'Roboto Condensed', sans-serif
			color white
			border none
			box-shadow 0px 0px 5px negro
			float right
			margin 1em 0em 0em 0em
			border-radius 10px 0px 10px 0px


/* ===============
   COMPROMISO
   =============== */
   
.compromiso-container
	background url('../img/compromiso.jpg')
	background-size cover
	background-repeat no-repeat
	height auto
	color white
	width 100%
	text-align center
	padding 3em 1em
	margin 1em 0em
	h3
		font-family 'Roboto', sans-serif
		font-weight 300
		font-size 2em
		margin-bottom em(5px)
	.compromiso-slider
		width 100%
		h3
			font-size 1em
			font-family 'Roboto Condensed', sans-serif
			font-weight 700
			@media screen and (min-width: 1024px)
				font-size 1.5em

/* ===============
   FOOTER
   =============== */
   
footer
	@media print
		display none
	background negro
	overflow auto
	text-align center
	color white
	margin .5em 0em 0em
	img
		width 150px
		height auto
		margin 1em 0em .5em
	span
		display block
		font-size em(14px)
		padding 0 em(10px)
		margin-bottom .5em
		font-family 'Roboto', sans-serif
		font-weight 100
	.footer-icons
		svg
			display inline-block
			size(25px)
			fill white
			margin em(10px)
			vertical-align middle
	li
		display inline-block
		margin-bottom em(10px)
		height 20px
		a
			color white
			font-size em(12px)
			text-decoration underline
			

