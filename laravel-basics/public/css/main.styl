	.anuncio-slider
		width 100%
		margin .5em 0em
		position relative
		overflow hidden
		@media screen and (min-width: 1024px)
			height 500px
		img
			width 100%
			height auto
		.anuncio-controles
			width 100%
			position absolute
			top 50%
			margin-top -25px
			z-index 200
			padding 0em .5em
			@media print
				display none
			clearfix()
			#anuncio-next
			#anuncio-prev
