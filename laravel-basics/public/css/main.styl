@import '../lib/index'
@import 'animate'

/* ===============
   COLORES
   =============== */

negro = #2f2f30
negro_2 = #434343
azul = #25a8cc
gris = #f3f0f0
border-color = #A3A2A3
light-gray = #cacaca
/* ===============
   RESETS
   =============== */

normalize()
box_reset()

ul
nav
li
figure
p
h1
h2
h3
	margin 0
	padding 0

a
	text-decoration none

html
body
	size(100%)
body
	background gris
	
	
li
	list-style none


	
/* ===============
   USEFUL CLASS
   =============== */
  
.center-text
	text-align center

.overflow
	overflow hidden
	size(100%)
	position fixed

.active
	background azul
	svg
		fill white
	&:after
		content ''
		triangle(bottom, 15px, azul)
		position absolute
		bottom -7px
		left 50%
		margin-left -7px
		z-index 500

.mostrar-menu
	display block !important


.web-container
	max-width 1280px
	margin auto
	clearfix()
	
	
/* ===============
   TIPOGRAFIA 
   =============== */
   
h2
h1
	font-family 'Roboto Condensed', sans-serif
h3
p
	font-family 'Roboto', sans-serif
	



/* ===============
   OVERLAY/LOGIN
   =============== */

.overlay
	position fixed
	display none
	size(100%)
	background rgba(black, .25)
	top 0
	left 0
	z-index 999
