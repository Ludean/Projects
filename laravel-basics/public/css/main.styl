			font-weight 100
		a
			font-weight 300
			color negro_2
			text-decoration underline
			@media screen and (min-width: 1024px)
				padding-left 1em
		span
		a
			font-family 'Roboto Condensed', sans-serif
			margin .5em 0em
		span
			color azul
			font-weight 700
			position relative
			svg
				fill border-color
				size(15px)
